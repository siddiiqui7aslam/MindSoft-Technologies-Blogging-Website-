---
import Layout from '../../layouts/Layout.astro';
import BlogCard from '../../components/BlogCard.astro';

const allPosts = [
  {
    title: 'Getting Started with Astro',
    excerpt: 'Learn how to build fast, modern websites with Astro...',
    author: 'John Doe',
    date: '2024-04-10',
    slug: 'getting-started-with-astro'
  },
  {
    title: 'The Power of Markdown',
    excerpt: 'Discover why Markdown is the perfect format for blogging...',
    author: 'Jane Smith',
    date: '2024-04-09',
    slug: 'power-of-markdown'
  },
  {
    title: 'Building Responsive Layouts',
    excerpt: 'Master the art of creating beautiful responsive designs...',
    author: 'Mike Johnson',
    date: '2024-04-08',
    slug: 'responsive-layouts'
  },
  {
    title: 'Web Performance Tips',
    excerpt: 'Essential tips for improving your website performance...',
    author: 'Sarah Wilson',
    date: '2024-04-07',
    slug: 'web-performance-tips'
  }
];
---

<Layout title="Blog Posts - BlogSpace">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">All Blog Posts</h1>
  
  <div class="grid gap-8 md:grid-cols-2">
    {allPosts.map(post => (
      <BlogCard {...post} />
    ))}
  </div>
</Layout>